{% extends "app.html.twig" %}
{% block title %}Regi천es de Lages{% endblock %}

{% block content %}
    <div class="container mt-6">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header justify-content-between">
                        <h3 class="card-title">Diagn처stico por regi천es</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <p>Selecione uma das regi천es abaixo.</p>
                            </div>
                        </div>
                        <div class="row">
                            {% for region in regions %}
                            <div class="{% if region.city %}col-sm-12{% else %}col-sm-6 col-lg-4{% endif %}">
                                <div class="card p-3">
                                    <div class="d-flex align-items-center">
                                        {% if region.city %}
                                        <span class="stamp stamp-md bg-blue-dark mr-3">
                                          <i class="fe fe-star"></i>
                                        </span>
                                        {% else %}
                                        <span class="stamp stamp-md bg-blue mr-3">
                                          <i class="fe fe-map-pin"></i>
                                        </span>
                                        {% endif %}
                                        <div>
                                            <h4 class="m-0"><a href="/regiao/{{ region.id }}/{{ helper.slug(region.name) }}">{{ region.name }}</a></h4>
                                        </div>
                                    </div>
                                    {% if region.description|length > 0 %}
                                    <div class="mt-3">{{ region.description|raw }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card" id="mapa-interativo">
                    <div class="card-header justify-content-between">
                        <h3 class="card-title">Mapa interativo</h3>
                    </div>
                    <div class="card-body">
                        <iframe src="https://www.google.com/maps/d/embed?mid=1RAkIC3ml6qjrrMHL6AP5q6TkqfgdKCdp" allowfullscreen style="border:0; width: 100%; height: 500px;"></iframe>
                    </div>
                </div>
            </div>
        </div>   
        <div class="row">
            <div class="col-12">
                <div class="card" id="CRAS">
                    <div class="card-header justify-content-between">
                        <h3 class="card-title">CRAS</h3>
                    </div>
                    <div class="card-body">
                        <img src="https://i.imgur.com/nzSALOB.jpg">
                    </div>
                </div>
            </div>
        </div>  
        <div class="row">
            <div class="col-12">
                <div class="card" id="CREAS">
                    <div class="card-header justify-content-between">
                        <h3 class="card-title">CREAS</h3>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://i.imgur.com/0noJxdX.jpg">
                    </div>
                </div>
            </div>
        </div> 
    </div>
{% endblock %}